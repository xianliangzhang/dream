<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="false">

    <bean id="ds_ksy_users" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://10.0.3.199:3306/ksyusers"/>
        <property name="username" value="root"/>
        <property name="password" value="hk1997"/>
    </bean>
    <bean id="sqlSessionFactoryKsyUsers" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="ds_ksy_users"/>
        <property name="mapperLocations" value="classpath:com/god/dream/ksyusers/dao/user/UserInfoDao.xml"/>
    </bean>
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.god.dream.ksyusers"/>
        <property name="sqlSessionFactoryBeanName" value="sqlSessionFactoryKsyUsers"></property>
    </bean>
    <bean id="transactionManagerKsyUsers" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="ds_ksy_users"/>
    </bean>

</beans>