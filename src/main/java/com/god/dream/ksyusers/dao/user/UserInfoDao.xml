<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.god.dream.ksyusers.dao.user.UserInfoDao">

    <resultMap id="userInfo" type="com.god.dream.boss.dao.user.UserInfoDao">
        <id property="id" column="user_id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
    </resultMap>

    <select id="find" parameterType="long" resultMap="userInfo">
        select user_id, name, email from user_info where user_id = #{0}
    </select>

</mapper>
